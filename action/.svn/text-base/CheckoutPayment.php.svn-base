			VALUTA=".$VALUTA."&
			NUMORD=".$NUMORD."&
			IDNEGOZIO=".$IDNEGOZIO."&
			URLDONE=".urlencode($URLDONE)."&
			URLBACK=".urlencode($URLBACK)."&
			URLMS=".urlencode($URLMS)."&
			TAUTOR=".$TAUTOR."&
			TCONTAB=".$TCONTAB."&
			MAC=".$MAC;

