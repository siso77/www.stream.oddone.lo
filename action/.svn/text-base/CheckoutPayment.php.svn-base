			$params = base64_decode($_REQUEST['params']);
			$exp = explode('&', $params);
			foreach ($exp as $val)
			{
				$ex = explode('=', $val);
				if($ex[0] == 'back')
					$back = 1;
				if($ex[0] == 'confirm')
					$confirm = 1;
				if($ex[0] == 'id_ordine')
